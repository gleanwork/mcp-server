{
  "name": "@gleanwork/configure-mcp-server",
  "version": "0.7.1",
  "description": "MCP server configurator for Glean",
  "keywords": [
    "mcp",
    "mcp-server"
  ],
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gleanwork/mcp-server.git",
    "directory": "packages/configure-mcp-server"
  },
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@glean.com>",
  "type": "module",
  "exports": {
    ".": "./build/index.js"
  },
  "main": "./build/index.js",
  "bin": {
    "configure-mcp-server": "./build/index.js"
  },
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts",
    "build/**/*.js.map",
    "build/**/*.d.ts.map",
    "!build/**/test/**",
    "!build/test/**",
    "!build/src/**",
    "!build/vitest.config.*"
  ],
  "scripts": {
    "build": "rimraf build && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "npm-run-all --sequential lint:*",
    "lint:eslint": "eslint \"src/**/*.ts\" --fix",
    "lint:package-json": "sort-package-json",
    "lint:ts": "tsc --noEmit",
    "prepare": "pnpm run build",
    "release": "release-it",
    "test": "vitest run",
    "test:all": "pnpm lint && pnpm lint:ts && pnpm test",
    "test:watch": "vitest",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@gleanwork/local-mcp-server": "workspace:*",
    "@gleanwork/mcp-server-utils": "workspace:*",
    "dotenv": "^16.3.1",
    "meow": "^13.2.0",
    "open": "^10.1.1",
    "tldts": "^7.0.7",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@scalvert/bin-tester": "^2.1.1",
    "@types/node": "^22.14.0",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.27.0",
    "console-test-helpers": "^0.3.3",
    "eslint": "^9.29.0",
    "eslint-plugin-prettier": "^5.2.5",
    "fixturify": "^3.0.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "msw": "^2.10.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "release-it": "^17.11.0",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.2.1",
    "typescript": "^5.8.2",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
